{
  "apps": [
    {
      "name": "@fss/server",
      "script": "dist/app.js",
      "cwd": "./",
      "exec_mode": "cluster",
      "error_file": "path/to/err.log",
      "out_file": "path/to/out.log",
      "merge_logs": true,
      "log_date_format": "[YYYY/MM/DD HH:mm:ss]",
      "min_uptime": "60s",
      "max_restarts": 30,
      "autorestart": true,
      "restart_delay": "60",
      "env": {
        "NODE_ENV": "production",
        "DATABASE_URL": "mysql://johndoe:randompassword@localhost:3306/mydb?schema=public",
        "VITE_SECRET": "JWT_SECRET",
        "VITE_PORT": 3000
      }
    }
  ]
}
